<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.FinancialFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/financial_model_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="Financial Model"
            android:textColor="@color/darkGray"
            android:textSize="28sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/financial_description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/financial_model_title_text"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:text="Cada peso donado a Fundación Dibujando un Mañana se multiplica en $6,16 en retorno social de la inversión; de acuerdo a un estudio de Filantrofilia en 2019."
            android:textColor="@color/darkGray"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/financial_mean_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/financial_description_text"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:text="¿Esto qué quiere decir?"
            android:textColor="@color/darkGray"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/financial_description2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/financial_mean_title_text"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:text="Que contamos con la capacidad de acompañar a nuestros aliados (empresas y personas) a realizar las inversiones más seguras y transparentes; y a las OSC a ser eficientes y sostenibles; al realizar paso a paso todo el proceso; dando un valor agregado más allá de la inversión financiera que se realiza."
            android:textColor="@color/darkGray"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/financial_description2_text"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="100dp"
            android:adjustViewBounds="true"
            android:src="@drawable/dum_financial" />

    </RelativeLayout>


</ScrollView>