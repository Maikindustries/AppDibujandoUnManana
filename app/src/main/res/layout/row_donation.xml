<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <TextView
        android:id="@+id/myDonations_description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="@color/darkGray"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="Regalos con casusa" />

    <TextView
        android:id="@+id/myDonations_money_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/myDonations_description_text"
        android:layout_alignStart="@id/myDonations_description_text"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="@color/darkGray"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:text="$100" />

    <TextView
        android:id="@+id/myDonations_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/myDonations_money_text"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/myDonations_money_text"
        android:textColor="@color/darkGray"
        android:textSize="12sp"
        tools:text="30/05/2021" />

    <Button
        android:id="@+id/myDonations_deductible_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="32dp"
        android:background="@drawable/round_corners_buttons"
        android:backgroundTint="@color/redDUM"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp"
        android:text="Deductible"
        android:textColor="@color/white"
        android:textSize="12sp" />

</RelativeLayout>