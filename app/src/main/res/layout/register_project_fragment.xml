<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundWhite"
    tools:context=".ui.projects.RegisterProjectFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="100dp"
        android:elevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="32dp">

            <TextView
                android:id="@+id/register_project_register_project_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingStart="12dp"
                android:paddingTop="24dp"
                android:paddingEnd="12dp"
                android:paddingBottom="32dp"
                android:text="@string/rproject"
                android:textColor="@color/darkGray"
                android:textSize="28sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/register_project_project_name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/register_project_register_project_text"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/round_corners"
                android:hint="@string/projectName"
                android:paddingStart="20dp"
                android:paddingTop="8dp"
                android:paddingEnd="20dp"
                android:paddingBottom="8dp"
                android:inputType="textPersonName"
                android:textColor="@color/darkGray"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/register_project_description_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/register_project_project_name_edit_text"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/round_corners"
                android:gravity="start|top"
                android:hint="@string/hint_description"
                android:paddingStart="20dp"
                android:paddingTop="8dp"
                android:paddingEnd="20dp"
                android:paddingBottom="8dp"
                android:textColor="@color/darkGray"
                android:textSize="14sp" />

            <Button
                android:id="@+id/register_project_register_btn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register_project_description_edit_text"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/round_corners_buttons"
                android:backgroundTint="@color/redDUM"
                android:elevation="8dp"
                android:gravity="center"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:text="@string/register"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>