<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/main_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="Fundación \nDibujando un mañana"
                android:textColor="@color/darkGray"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/main_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_title_text"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="32dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="110dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dumlogo" />

                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Nos dedicamos a impulsar el desarrollo social de niñas, niños y adolescentes en situación de vulnerabilidad en México y Centro América con un modelo de inversión social."
                    android:textAlignment="textStart"
                    android:textColor="@color/darkGray"
                    android:textSize="13sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/main_our_causes_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_linear_layout"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:text="Our causes"
                android:textColor="@color/darkGray"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_our_causes_text"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/main_our_history_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/recyclerView"
                android:layout_marginStart="16dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="16dp"
                android:text="Our story"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <me.biubiubiu.justifytext.library.JustifyTextView
                android:id="@+id/main_our_history_description_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_our_history_title_text"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:text="In October 1997, the Fundación Diseño Ilustrajando un Mañana, A.C. was born. with the objective of investing in institutions that serve girls, boys and adolescents to promote institutional development and guarantee their sustainability.\n\nThe more than 20 years of evolution have been marked by different events of transformation, strengthening, innovation and transparency thanks to its seven presidents, 40 members of the Board of Directors, different advisers in eight work Committees and the Operational Team.\n\nThe road has been long and there is still much to do. That is why we are convinced that the route is to generate alliances to create suitable conditions that favor a dignified life for all people in our country and the region."
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/main_do_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_our_history_description_text"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:text="What do we do?"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/main_financial_model_btn"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_below="@id/main_do_title_text"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/round_corners_buttons"
                android:backgroundTint="@color/redDUM"
                android:paddingStart="16dp"
                android:paddingTop="20dp"
                android:paddingEnd="16dp"
                android:paddingBottom="20dp"
                android:text="Financial model"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/main_social_investment_model_btn"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_below="@id/main_financial_model_btn"
                android:layout_alignTop="@id/main_financial_model_btn"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="16dp"
                android:layout_toEndOf="@id/main_financial_model_btn"
                android:background="@drawable/round_corners_buttons"
                android:backgroundTint="@color/redDUM"
                android:paddingStart="16dp"
                android:paddingTop="20dp"
                android:paddingEnd="16dp"
                android:paddingBottom="20dp"
                android:text="Social investment model"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/main_dum_model_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_social_investment_model_btn"
                android:layout_alignStart="@id/main_financial_model_btn"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="120dp"
                android:background="@drawable/round_corners_buttons"
                android:backgroundTint="@color/redDUM"
                android:paddingStart="16dp"
                android:paddingTop="20dp"
                android:paddingEnd="32dp"
                android:paddingBottom="20dp"
                android:text="Fundación Dibujando un Mañana model"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>