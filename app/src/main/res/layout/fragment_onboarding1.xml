<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.introduction.Onboarding1Fragment">

    <TextView
        android:id="@+id/onboard1_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="32dp"
        android:text="¡Somos Fundación\nDibujando un Mañana!"
        android:textColor="@color/darkGray"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/onboard1_image"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_below="@id/onboard1_title_text"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:src="@drawable/dumlogo" />

    <me.biubiubiu.justifytext.library.JustifyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/onboard1_image"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:text="De acuerdo con UNICEF (2017) la mitad de las niñas, niños y adolescentes en México vive en pobreza. Por eso desde hace más de 20 años estamos comprometidos con guiar tus ganas de ayudar para transformarlas en poder."
        android:textColor="@color/darkGray"
        android:textSize="16sp" />


</RelativeLayout>